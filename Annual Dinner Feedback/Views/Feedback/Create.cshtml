@model Annual_Dinner_Feedback.Models.Feedback
@{
    ViewData["Title"] = "Annual Dinner Feedback";
}

<!-- CSS Styling -->
<style>
    /* Center the form container and add styling */
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007BFF;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 80%;
        padding: 8px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: none;
        outline: none;
        margin: 0 auto;
        display: block;
    }

        .form-control:focus {
            border-color: #007bff;
        }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
        text-align: center;
    }

    .vertical-radio-group {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .vertical-radio-group label {
            margin-bottom: 5px;
        }

    .btn-primary {
        display: block;
        width: 80%;
        padding: 10px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        margin: 15px auto 0 auto;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<!-- Form Content -->
<div class="form-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactNo"></label>
            <input asp-for="ContactNo" class="form-control" type="tel" maxlength="11" pattern="\d{11}" placeholder="Enter 11-digit contact number" />
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>

        <!-- Text-based questions -->
        <div class="form-group">
            <label asp-for="Question1"></label>
            <input asp-for="Question1" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Question2"></label>
            <input asp-for="Question2" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Question3"></label>
            <input asp-for="Question3" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Question4"></label>
            <input asp-for="Question4" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Question5"></label>
            <input asp-for="Question5" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Question6"></label>
            <input asp-for="Question6" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Question7"></label>
            <input asp-for="Question7" class="form-control" />
        </div>

        <button type="submit" class="btn-primary">Submit Feedback</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
